.life-input__wrapper {
  position: relative;
  margin-bottom: 10px;
  overflow: hidden;
  input {
    width: 200px;
    height: 30px;
  }
  input[type="file"] {
    position: relative;
    width: 40px;
    height: 40px;
    &:after {
      content: '';
      display: inline-block;
      position: absolute;
      width: 100%;
      height: 100%;
      top: 0;
      left: 0;
      background-color: #ccc;
    }
  }
}